<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF8F8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_transporteTI"
        android:layout_width="223dp"
        android:layout_height="158dp"
        android:layout_marginTop="224dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delivery_truck_icon_icon_on_transparent_background_free_png_1" />

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="83dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/b_cadastrarLC"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_black"
            android:fontFamily="@font/roboto_black"
            android:text="CADASTRE-SE"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.721" />

        <Button
            android:id="@+id/b_loginTI"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_white"
            android:fontFamily="@font/roboto_black"
            android:text="LOGIN"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_fretefacilTI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/comfortaa"
        android:text="FRETE FÃCIL"
        android:textColor="#1D1D1C"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_transporteTI" />


</androidx.constraintlayout.widget.ConstraintLayout>