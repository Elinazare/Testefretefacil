<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_inicialFretista">

    <Button
        android:id="@+id/b_iniciarTIF"
        android:layout_width="101dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:layout_marginTop="92dp"
        android:background="@drawable/botao_redondo"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="Iniciar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iV_transporteTIF" />

    <ImageView
        android:id="@+id/iV_transporteTIF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_textoTIF"
        app:srcCompat="@drawable/delivery_truck_icon_icon_on_transparent_background_free_png_1" />

    <TextView
        android:id="@+id/tV_textoTIF"
        android:layout_width="332dp"
        android:layout_height="80dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="Estamos felizes por você estar aqui!"
        android:textColor="#1D1D1C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tV_offlineTIF"
        android:layout_width="226dp"
        android:layout_height="41dp"
        android:background="@drawable/button_grey"
        android:fontFamily="@font/comfortaa"
        android:text="Você está offline"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_iniciarTIF" />
</androidx.constraintlayout.widget.ConstraintLayout>