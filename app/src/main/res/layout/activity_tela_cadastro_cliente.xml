<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_cadastroCliente">

    <TextView
        android:id="@+id/tV_clienteCC"
        android:layout_width="81dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="256dp"
        android:fontFamily="@font/comfortaa"
        android:text="Cliente"
        android:textColor="#1D1D1C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_nomeCC"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="  Nome"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_cadastreseCC" />

    <EditText
        android:id="@+id/edt_cpfCC"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="  CPF"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nomeCC" />

    <EditText
        android:id="@+id/edt_emailCC"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="  E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_cpfCC" />

    <EditText
        android:id="@+id/edt_telefoneCC"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="  Telefone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_emailCC" />

    <EditText
        android:id="@+id/edt_senhaCC"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="  Cadastre uma senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_telefoneCC" />

    <TextView
        android:id="@+id/tV_cadastreseCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/comfortaa"
        android:text="Cadastre-se: "
        android:textColor="#1D1D1C"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_clienteCC" />

    <Button
        android:id="@+id/b_cadastrarLC"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_margin="8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_black"
        android:fontFamily="@font/roboto_black"
        android:text="Cadastrar"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_senhaCC"
        app:layout_constraintVertical_bias="0.213" />

    <ImageButton
        android:id="@+id/imgB_voltarCC"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/tV_clienteCC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar_1" />

</androidx.constraintlayout.widget.ConstraintLayout>